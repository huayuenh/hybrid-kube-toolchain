{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "registry-region": {
            "description": {
                "$ref": "#/messages/deploy.registryRegionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": ["api-key"]
            }
        },
        "registry-namespace": {
            "description": {
                "$ref": "#/messages/deploy.registrynsDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "validator": {
                "v-type": "k8s-registry-namespace",
                "params": ["registry-region"],
                "validate": false
            }
        },
        "staging-region": {
            "description": {
                "$ref": "#/messages/deploy.regionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": ["api-key"]
            }
        },
        "staging-resource-group": {
            "description": {
                "$ref": "#/messages/deploy.rgDescription"
            },
            "type": "string",
            "validator": {
                "v-type": "resource-group",
                "params": ["api-key"]
            }
        },
        "staging-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.clusterNameDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8s-cluster-name",
                "params": ["staging-resource-group", "staging-region"]
            }
        },
        "staging-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "prod-kube-master-address": {
            "description": {
                "$ref": "#/messages/deploy.kubeMasterAddressDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "prod-kube-master-port": {
            "description": {
                "$ref": "#/messages/deploy.kubeMasterPortDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "prod-kube-service-account-name": {
            "description": {
                "$ref": "#/messages/deploy.serviceAccountNameDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "prod-kube-service-account-token": {
            "description": {
                "$ref": "#/messages/deploy.serviceAccountTokenDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "prod-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "app-name", 
        "api-key", 
        "registry-region", 
        "registry-namespace", 
        "staging-region", 
        "staging-resource-group", 
        "staging-cluster-name", 
        "staging-cluster-namespace",
        "prod-kube-master-port",
        "prod-kube-service-account-name",
        "prod-kube-service-account-token",
        "prod-cluster-namespace"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        }, {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "app-name"
        }, {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "api-key"
        }, {
            "type": "table",
            "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregRegion"
                }
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregns"
                }
            }, {
                "type": "select",
                "title": {
                    "$ref": "#/messages/deploy.imgregRegion"
                },
                "key": "registry-region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "select",
                "readonly": false,
                "title": {
                    "$ref": "#/messages/deploy.imgregNs"
                },
                "key": "registry-namespace"
            }]
        }, {
            "type": "table",
            "columnCount": 5,
            "widths": [
                "16%",
                "21%",
                "21%", 
                "21%",
                "21%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.rg"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.cluster"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.clusterNs"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "select",
                    "key": "staging-region"
                },
                {
                    "type": "select",
                    "key": "staging-resource-group",
                    "readonly": false
                },
                {
                    "type": "select",
                    "key": "staging-cluster-name",
                    "readonly": false
                },
                {
                    "type": "text",
                    "key": "staging-cluster-namespace",
                    "readonly": false
                }                
            ]
        }, {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "16%",
                "42%",
                "21%",
                "21%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.kubeMasterAddress"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.kubeMasterPort"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.clusterNs"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "text",
                    "key": "prod-kube-master-address",
                    "readonly": false
                },
                {
                  "type": "text",
                  "key": "prod-kube-master-port",
                  "readonly": false
                },
                {
                  "type": "text",
                  "key": "prod-cluster-namespace",
                  "readonly": false
                }
            ]
        }, {
            "type": "table",
            "columnCount": 1,
            "widths": ["100%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusterDescription"
                }
            }]
        }, {
            "type": "table",
            "columnCount": 1,
            "widths": ["100%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusternsDescription"
                }
            }]
        }
    ]
}